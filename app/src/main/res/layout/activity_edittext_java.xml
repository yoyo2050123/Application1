<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_input01"
        android:hint="請輸入數字1"
        android:text=""
        android:inputType="numberDecimal"
        android:textColorHint="#FF0000"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_add"
        android:text=" + "
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/edittext_input01"
        app:layout_constraintBaseline_toBaselineOf="@id/edittext_input01"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_input02"
        android:hint="請輸入數字2"
        android:text=""
        android:inputType="numberDecimal"
        android:textColorHint="#FF0000"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@id/textview_add"
        app:layout_constraintBaseline_toBaselineOf="@id/edittext_input01"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_answer"
        android:text=" = "
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/edittext_input02"
        app:layout_constraintBaseline_toBaselineOf="@id/edittext_input02"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:text="兩數相加"
        app:layout_constraintTop_toBottomOf="@id/edittext_input01"
        app:layout_constraintLeft_toLeftOf="@id/edittext_input01"
        />

</androidx.constraintlayout.widget.ConstraintLayout>